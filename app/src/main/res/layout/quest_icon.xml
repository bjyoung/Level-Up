<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:layout_margin="10dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/QuestIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/quest_icon_description"
        android:src="@drawable/question_mark_icon"
        app:backgroundTint="@color/quest_card_icon_background"
        app:elevation="@dimen/quest_card_elevation"
        app:fabCustomSize="@dimen/big_round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IconName"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/default_icon_name"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuestIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>