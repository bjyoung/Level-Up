<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/QuestCard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CardConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background = "@color/easy"
        tools:layout_height="@dimen/quest_card_height"
        tools:layout_width="@dimen/quest_card_width">

        <TextView
            style="@style/Text"
            android:id="@+id/CardName"
            android:text="@string/placeholder_text"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/quest_card_font_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.120000005" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/QuestIcon"
            android:id="@+id/CardIcon"
            android:contentDescription="@string/quest_icon_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>